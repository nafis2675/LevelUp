{
  "name": "LevelUp",
  "identifier": "levelup",
  "version": "1.0.0",
  "description": "Smart gamification suite with XP, levels, badges, and leaderboards for your Whop community",
  "icon": "https://thelevelup.vercel.app/icon.svg",
  "category": "engagement",
  "website": "https://thelevelup.vercel.app",
  "supportEmail": "support@thelevelup.app",
  "experiences": [
    {
      "slug": "dashboard",
      "name": "Dashboard",
      "description": "Manage XP, badges, rewards, and rules for your Whop community",
      "path": "/",
      "default": true
    },
    {
      "slug": "experience-detail",
      "name": "Experience Detail",
      "description": "Deep link used by Whop to open a specific experience",
      "path": "/experiences/[experienceId]"
    }
  ],
  "iframe": {
    "url": "https://thelevelup.vercel.app",
    "sandbox": [
      "allow-scripts",
      "allow-same-origin",
      "allow-forms",
      "allow-popups",
      "allow-popups-to-escape-sandbox"
    ]
  },
  "permissions": [
    "read:company",
    "read:memberships",
    "read:users",
    "write:notifications"
  ],
  "webhooks": [
    "message.created",
    "payment.succeeded",
    "course.section_completed",
    "membership.created",
    "membership.deleted"
  ],
  "oauth": {
    "scopes": [
      "company:read",
      "memberships:read",
      "users:read",
      "notifications:write"
    ]
  },
  "pricing": {
    "free": {
      "name": "Free",
      "price": 0,
      "limits": {
        "members": 50,
        "badges": 5,
        "rules": 3
      }
    },
    "pro": {
      "name": "Pro",
      "price": 29,
      "interval": "month"
    },
    "premium": {
      "name": "Premium",
      "price": 59,
      "interval": "month"
    }
  }
}
